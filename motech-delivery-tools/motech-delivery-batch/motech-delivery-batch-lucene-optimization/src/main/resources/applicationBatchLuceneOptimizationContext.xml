<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="luceneOptimizationProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="ignoreResourceNotFound" value="true"/>
        <!-- Defaults -->
        <property name="properties">
            <props>
                <prop key="couchdb.lucene.host">localhost</prop>
                <prop key="couchdb.port">5984</prop>
            </props>
        </property>

        <!--User defined values-->
        <property name="locations">
            <list>
                <value>classpath*:batchLuceneOptimization.properties</value>
            </list>
        </property>
    </bean>

</beans>